# Environment Variables Example
# Copy this file to .env.local, .env.development, .env.production, etc.

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/zoho_db"

# NextAuth Configuration
AUTH_SECRET="your-auth-secret-here"

# Node Environment
NODE_ENV="development"

# Zoho API Configuration (for future use)
# ZOHO_CLIENT_ID="your-zoho-client-id"
# ZOHO_CLIENT_SECRET="your-zoho-client-secret"
# ZOHO_REFRESH_TOKEN="your-zoho-refresh-token"
# ZOHO_ORG_ID="your-zoho-org-id"

# Optional: Skip environment validation (useful for Docker builds)
# SKIP_ENV_VALIDATION=true 