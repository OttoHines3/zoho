# Environment Variables Example
# Copy this file to .env.local, .env.development, .env.production, etc.

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/zoho_db"

# NextAuth Configuration
AUTH_SECRET="your-auth-secret-here"

# Node Environment
NODE_ENV="development"

# Stripe Configuration
# Must start with pk_ (publishable key)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
# Must start with sk_ (secret key) - NEVER expose this to the client
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Zoho API Configuration
ZOHO_ACCESS_TOKEN="your-zoho-access-token-here"
ZOHO_CLIENT_ID="your-zoho-client-id"
ZOHO_CLIENT_SECRET="your-zoho-client-secret"
ZOHO_REFRESH_TOKEN="your-zoho-refresh-token"
ZOHO_ORG_ID="your-zoho-org-id"

# Zoho Billing Configuration
ZOHO_BILLING_ORGANIZATION_ID="your-zoho-billing-organization-id"
ZOHO_BILLING_AUTH_TOKEN="your-zoho-billing-auth-token"
ZOHO_BILLING_WEBHOOK_SECRET="your-zoho-billing-webhook-secret"

# Optional: Skip environment validation (useful for Docker builds)
# SKIP_ENV_VALIDATION=true 